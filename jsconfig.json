{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "checkJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "typeAcquisition": {
    "include": [
      "react",
      "electron",
      "node"
    ]
  }
}
